@model RealEstate.PresentationLayer.Areas.Guest.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Guest/Views/_GuestLayout.cshtml";
}

<form method="post" enctype="multipart/form-data">



    <label>Kullanıcı adı</label>
    <input type="text" asp-for="Mail" class="form-control" />
    <br />
    <label>Ad</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />



    <label>Soyad</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <br />

    <label>Cinsiyet</label>
    <input type="text" asp-for="Gender" class="form-control" />
    <br />



    <label>Telefon</label>
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <br />



    <label>Şifre</label>
    <input type="text" asp-for="Password" class="form-control" />
    <br />
    <div class="form-group">
        <label> Resim Seçin </label>
        <input type="file" asp-for="Image" />
    </div>
    <br />
    <button class="btn btn-primary"> verileri güncelle </button>
</form>